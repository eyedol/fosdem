<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Toolbar & Actionbar -->
    <style name="BaseToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_2dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="elevation">@dimen/elevation_2dp</item>
        <item name="actionMenuTextColor">@color/toolbar_text</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ToolbarTheme</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>
    <!-- Text -->
    <style name="TextEmpty" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/empty_view_text</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.01</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/grey700</item>
    </style>
    <style name="TextHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/grey700</item>
    </style>
    <style name="TextSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/grey700</item>
    </style>
    <!-- Component -->
    <style name="BaseRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="BaseFabView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseEmptyView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextEmpty</item>
    </style>
</resources>
