CREATE TABLE IF NOT EXISTS `attachments`(
  `id` INTEGER PRIMARY KEY AUTOINCREMENT,
  `type` TEXT,
  `url` TEXT,
  `name` TEXT
);

-- queries

insert:
INSERT OR IGNORE INTO attachments (
    `id`,
    `type`,
    `url`,
    `name`
) VALUES (?, ?, ?, ?);

findInsertRowid:
SELECT last_insert_rowid();
