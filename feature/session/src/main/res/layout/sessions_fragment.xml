<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.addhen.fosdem.sessions.view.SessionsFragment">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/sessions_tab_layout"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="@dimen/space_54dp"
                android:tabStripEnabled="false"
                android:paddingBottom="@dimen/space_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabGravity="fill"
                app:tabIndicator="@drawable/shape_pill_tab_indicator"
                app:tabRippleColor="@null"
                app:tabIndicatorGravity="stretch"
                style="@style/Widget.MaterialComponents.TabLayout.Colored"/>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/sessions_viewpager"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="@dimen/space_0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sessions_tab_layout"/>

        <ProgressBar
                android:id="@+id/sessions_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
